<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <include
        android:id="@+id/in_sign_top"
        layout="@layout/sign_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="7%w" />
        <com.onepiece.redwood.order.sign.PaintView
            android:id="@+id/id_signview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/in_sign_top"
            app:layout_marginBottomPercent="11.5%w"/>
   <!-- <com.onepiece.redwood.order.sign.SignView
        android:id="@+id/id_signview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/in_sign_top"

        app:layout_marginBottomPercent="11.5%w"
        />-->

    <include
        layout="@layout/sign_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="5%w"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="6.5%w"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_but_sure"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="6%w"
        android:text="确定"
        android:textColor="#ffffff"
        android:background="@drawable/sign_bg"
        android:gravity="center"/>
    <com.onepiece.redwood.WhorlView
        android:id="@+id/id_whorlview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:WhorlView_BigWhorlColor="@color/material_red"
        app:WhorlView_CircleSpeed="360"
        app:WhorlView_MiddleWhorlColor="@color/material_red"
        app:WhorlView_Parallax="fast"
        app:WhorlView_SmallWhorlColor="@color/material_red" />
</com.zhy.android.percent.support.PercentRelativeLayout>