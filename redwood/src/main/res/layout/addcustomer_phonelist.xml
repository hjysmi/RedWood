<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/self_bg">
    <View
        android:layout_alignParentTop="true"
        android:id="@+id/id_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/in_id_new"
        android:background="#eee" />
    <ImageView
        android:id="@+id/id_iv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/addcustomer_phonelist"
        app:layout_marginLeftPercent="5%w"
        app:layout_heightPercent="6.5%w"
        app:layout_widthPercent="6.5%w" />

    <TextView
        android:id="@+id/id_tv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id_iv_new"
        android:text="手机通讯录"
        app:layout_textSizePercent="4%w"
        android:textColor="#000000"
        app:layout_marginLeftPercent="5%w"
        app:layout_marginTopPercent="5%w" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_tv_new"
        android:layout_toRightOf="@+id/id_iv_new"
        android:text="从手机通讯录中导入联系人"
        app:layout_textSizePercent="2.5%w"
        android:textColor="#999999"
        app:layout_marginBottomPercent="5%w"
        app:layout_marginLeftPercent="5%w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/customerfrag_jt"
        app:layout_heightPercent="6%w"
        app:layout_marginRightPercent="5%w"
        app:layout_widthPercent="6%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>