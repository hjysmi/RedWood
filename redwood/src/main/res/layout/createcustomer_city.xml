<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="城市"
        android:textColor="#999999"
        app:layout_heightPercent="8%w"
        app:layout_marginLeftPercent="8%w"
        app:layout_textSizePercent="4%w"
        app:layout_widthPercent="10%w" />

    <TextView
        android:id="@+id/id_tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/prodetail_top_bg"
        android:gravity="center_vertical"
        app:layout_heightPercent="11%w"
        app:layout_textSizePercent="4%w"
        android:textColor="#555555"
        app:layout_marginRightPercent="8%w"
        app:layout_widthPercent="72%w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/createcustomer_jt"
        app:layout_heightPercent="4%w"
        app:layout_marginRightPercent="10%w"
        app:layout_widthPercent="4%w" />
</com.zhy.android.percent.support.PercentFrameLayout>