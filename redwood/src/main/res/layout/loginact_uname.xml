<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <EditText
        android:id="@+id/id_et_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_et_bg"
        android:textColorHint="#999999"
        app:layout_heightPercent="10%w"
        app:layout_textSizePercent="4%w"
        app:layout_widthPercent="90%w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/login_uname"
        app:layout_heightPercent="6%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_widthPercent="6%w" />
</com.zhy.android.percent.support.PercentFrameLayout>