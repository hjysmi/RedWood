<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/filter_but_bg">

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="价格"
        android:textColor="#343434"
        app:layout_marginTopPercent="5%w"
        app:layout_textSizePercent="4%w" />

    <RadioGroup
        android:id="@+id/id_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price"
        android:orientation="horizontal"
        app:layout_marginTopPercent="7%w">

        <RadioButton
            android:id="@+id/id_but_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popupwindow_select"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="0-1万"
            android:textColor="@android:color/black"
            android:textSize="17.0sp" />

        <RadioButton
            android:id="@+id/id_but_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popupwindow_select"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="1-5万"
            android:textColor="@android:color/black"
            android:textSize="17.0sp" />

        <RadioButton
            android:id="@+id/id_but_price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popupwindow_select"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="5-10万"
            android:textColor="@android:color/black"
            android:textSize="17.0sp" />

        <RadioButton
            android:id="@+id/id_but_price4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popupwindow_select"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="10万以上"
            android:textColor="@android:color/black"
            android:textSize="17.0sp" />
    </RadioGroup>
