<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customer_top_bg">

    <Button
        android:id="@+id/but_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/back_40x80"
        app:layout_heightPercent="13%w"
        app:layout_widthPercent="26%w" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/bg_000000"
        app:layout_textSizePercent="4.5%w" />

    <Button
        android:id="@+id/but_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/bg_00000000"
        android:text="保存"
        android:textColor="@color/bg_000000"
        app:layout_heightPercent="13%w"
        app:layout_textSizePercent="4%w"
        app:layout_widthPercent="20%w" />
</com.zhy.android.percent.support.PercentRelativeLayout>