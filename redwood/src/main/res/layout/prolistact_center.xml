<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/id_mult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="综合"
        android:layout_centerVertical="true"
        android:textColor="#747474"
        app:layout_heightPercent="8%w"
        app:layout_textSizePercent="3.5%w"
        app:layout_widthPercent="25%w" />

    <TextView
        android:id="@+id/id_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="销量"
        android:layout_centerVertical="true"
        android:textColor="#747474"
        app:layout_heightPercent="8%w"
        app:layout_marginLeftPercent="25%w"
        app:layout_textSizePercent="3.5%w"
        app:layout_widthPercent="25%w" />

    <TextView
        android:id="@+id/id_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="价格"
        android:layout_centerVertical="true"
        android:textColor="#747474"
        app:layout_heightPercent="8%w"
        app:layout_marginLeftPercent="50%w"
        app:layout_textSizePercent="3.5%w"
        app:layout_widthPercent="25%w" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/id_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_heightPercent="8%w"
        android:layout_centerVertical="true"
        app:layout_marginLeftPercent="75%w"
        app:layout_widthPercent="25%w">

        <TextView
            android:id="@+id/id_tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="筛选"
            android:textColor="#747474"
            app:layout_textSizePercent="14%w" />

        <ImageView
            android:id="@+id/id_iv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_tv_filter"
            android:background="@drawable/filter"
            app:layout_heightPercent="14%w"
            app:layout_widthPercent="14%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>