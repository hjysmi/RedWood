<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:id="@+id/rl_item_prolistact"
    >

<com.zhy.android.percent.support.PercentLinearLayout
    android:id="@+id/id_lliv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_widthPercent="100%w"
    app:layout_heightPercent="100%w"
    android:gravity="center">
    <ImageView
        android:id="@+id/id_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="100%w"
        app:layout_heightPercent="100%w"
        app:layout_maxWidthPercent="100%w"
        app:layout_maxHeightPercent="200%w"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />
    <!--android:background="@drawable/itemprolist"-->
</com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:id="@+id/id_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_lliv"
        android:singleLine="true"
        android:padding="0dp"
        android:gravity="center"
        app:layout_widthPercent="96%w"
        app:layout_heightPercent="9%w"
        app:layout_textSizePercent="7%w"
        android:layout_centerHorizontal="true"
        android:text="缅甸花"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/id_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_tv_name"
        android:text="￥ 88,880"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        app:layout_heightPercent="6%w"
        app:layout_textSizePercent="5%w"
        android:textColor="#b40000"
        app:layout_marginBottomPercent="3%w"/>

   <!-- <TextView
        android:id="@+id/id_tv_marketprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_tv_name"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/id_tv_price"
        android:text="￥ 88,880"
        android:padding="0dp"
        app:layout_heightPercent="6%w"
        app:layout_textSizePercent="5%w"
        android:textColor="#ababab"
        app:layout_marginBottomPercent="1%w"/>-->
    <View
        android:id="@+id/id_right_div"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#dddddd"
        android:visibility="visible"
        app:layout_heightPercent="115%w"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        android:layout_alignParentBottom="true"
        android:padding="0dp"/>
</com.zhy.android.percent.support.PercentRelativeLayout>