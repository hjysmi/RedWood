<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include
        layout="@layout/self_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13%w" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_heightPercent="3%w" />

    <include
        layout="@layout/self_headimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15%w"
        />

    <include
        layout="@layout/self_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15%w"
       />

    <include
        layout="@layout/self_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15%w"
       />

    <include
        layout="@layout/self_coll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15%w"
        app:layout_marginTopPercent="3%w"
        />

    <Button
        android:id="@+id/but_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/self_bg"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#555555"
        app:layout_heightPercent="12%w"
        app:layout_marginTopPercent="3%w"
        app:layout_textSizePercent="4%w" />
    <com.onepiece.redwood.WhorlView
        android:id="@+id/id_whorlview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_gravity="center"
        app:WhorlView_BigWhorlColor="@color/material_red"
        app:WhorlView_CircleSpeed="360"
        app:WhorlView_MiddleWhorlColor="@color/material_red"
        app:WhorlView_Parallax="fast"
        app:WhorlView_SmallWhorlColor="@color/material_red" />
</com.zhy.android.percent.support.PercentLinearLayout>