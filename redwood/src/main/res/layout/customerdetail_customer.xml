<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/f5f5f5"
    android:id="@+id/ll_customerdel">

    <include
        layout="@layout/customerdetail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="12%w" />

    <include
        layout="@layout/customerdetail_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="12%w" />
    <include
        layout="@layout/customerdetail_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="12%w" />
    <include
        layout="@layout/customerdetail_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="12%w" />
    <include
        layout="@layout/customerdetail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="12%w" />
    <TextView
        android:id="@+id/id_tv_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_lv_customer"
        android:gravity="center"
        android:text="客户已交易订单"
        android:textColor="#999999"
        app:layout_heightPercent="20%w"
        app:layout_textSizePercent="4.5%w" />
</com.zhy.android.percent.support.PercentLinearLayout>