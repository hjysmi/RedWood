<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="姓名"
        android:layout_gravity="center_vertical"
        android:textColor="#999999"
        app:layout_textSizePercent="4%w"
        app:layout_heightPercent="9%w"
        app:layout_marginLeftPercent="8%w"
        app:layout_widthPercent="10%w" />

    <EditText
        android:id="@+id/id_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:background="#FFFFFF"
        android:gravity="center_vertical|left"
        app:layout_heightPercent="11%w"
        android:textColor="#555555"
        app:layout_textSizePercent="4%w"
        app:layout_marginRightPercent="8%w"
        app:layout_widthPercent="72%w" />
</com.zhy.android.percent.support.PercentLinearLayout>