<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/id_et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/prolist_et_bg"
        android:hint="搜索"
        android:imeActionLabel="搜索"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="35dp"
        android:textColorHint="#c6c6c6"
        app:layout_heightPercent="12%w"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="5%w"
        app:layout_widthPercent="100%w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:background="@drawable/proclassfrag_search"
        app:layout_heightPercent="8%w"
        app:layout_marginLeftPercent="2.5%w"
        app:layout_widthPercent="8%w" />
</com.zhy.android.percent.support.PercentFrameLayout>