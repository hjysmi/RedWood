<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/self_bg"
    android:clickable="true"
    android:id="@+id/rl_coll">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:background="@drawable/prodetail_coll"
        app:layout_heightPercent="5%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_textSizePercent="3%w"
        app:layout_widthPercent="5%w" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="收藏"
        android:textColor="#555555"
        app:layout_heightPercent="10%w"
        app:layout_marginLeftPercent="13%w"
        app:layout_textSizePercent="3.5%w" />


</com.zhy.android.percent.support.PercentRelativeLayout>