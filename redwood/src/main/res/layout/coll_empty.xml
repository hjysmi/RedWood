<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_00000000"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/coll_nolist"
        app:layout_heightPercent="60%w"
        app:layout_widthPercent="60%w" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="暂时没有相关数据"
        android:textColor="@color/bg_999999"
        app:layout_marginTopPercent="5%w"
        app:layout_textSizePercent="8%w" />
</com.zhy.android.percent.support.PercentLinearLayout>