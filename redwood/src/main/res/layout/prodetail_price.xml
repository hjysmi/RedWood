<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/fragment_cycle_viewpager_content"
    android:background="@drawable/prodetail_top_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#B40000"
        app:layout_heightPercent="7%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_marginTopPercent="5%w"
        app:layout_textSizePercent="6%w" />

    <TextView
        android:id="@+id/id_tv_detailmarketprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#999999"
        app:layout_heightPercent="6%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_textSizePercent="4%w" />


</com.zhy.android.percent.support.PercentLinearLayout>