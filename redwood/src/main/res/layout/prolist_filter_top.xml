<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filter_but_bg">

    <Button
        android:id="@+id/id_but_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/popupwindow_but_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="#8f8f8f"
        app:layout_heightPercent="7%w"
        app:layout_marginLeftPercent="2%w"
        app:layout_textSizePercent="3.5%w"
        app:layout_widthPercent="15%w"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="筛选"
        android:textColor="#000000"
        app:layout_textSizePercent="4.5%w" />

    <Button
        android:id="@+id/id_but_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#b40000"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff"
        app:layout_heightPercent="7%w"
        app:layout_marginRightPercent="2%w"
        app:layout_textSizePercent="3.5%w"
        app:layout_widthPercent="15%w" />
</com.zhy.android.percent.support.PercentRelativeLayout>
