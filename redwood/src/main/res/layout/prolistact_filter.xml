<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include
        android:id="@+id/in_filter_top"
        layout="@layout/prolist_filter_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="13%w"
        app:layout_widthPercent="100%w" />

    <include
        android:id="@+id/in_filter_price"
        layout="@layout/prolist_filter_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="30%w"
        app:layout_marginTopPercent="3%w"
        app:layout_widthPercent="100%w" />

    <include
        android:id="@+id/in_filter_material"
        layout="@layout/prolist_filter_material"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%w"
        app:layout_marginTopPercent="1.5%w"
        app:layout_widthPercent="100%w" />

    <Button
        android:id="@+id/id_but_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/filter_but_bg"
        android:gravity="center"
        android:text="清除筛选"
        app:layout_heightPercent="8%w"
        app:layout_marginTopPercent="10%w"
        app:layout_textSizePercent="3.5%w"
        app:layout_widthPercent="28%w" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.zhy.android.percent.support.PercentLinearLayout>