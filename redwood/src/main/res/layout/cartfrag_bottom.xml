        app:layout_heightPercent="11%w"
        app:layout_marginLeftPercent="24%w"
        app:layout_widthPercent="72%w">

        <TextView
            android:id="@+id/id_tv_allprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="  总价:48000"
            android:textColor="#000000"
            app:layout_marginLeftPercent="2%w" />

        <Button
            android:id="@+id/id_but_submitorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#b40000"
            android:gravity="center"
            android:text="下单"
            android:textColor="#ffffff"
            app:layout_heightPercent="10%w"
            app:layout_marginRightPercent="4%w"
            app:layout_widthPercent="25%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
