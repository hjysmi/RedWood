<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/orderdetail_contract"
        app:layout_heightPercent="4%w"
        app:layout_marginLeftPercent="3%w"
        app:layout_widthPercent="4%w" />

    <TextView
        android:id="@+id/id_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="#000000"
        app:layout_heightPercent="4%w"
        app:layout_marginLeftPercent="9%w"
        app:layout_textSizePercent="3.5%w"
        app:layout_widthPercent="20%w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/orderdetail_phone"
        app:layout_heightPercent="4%w"
        app:layout_marginLeftPercent="30%w"
        app:layout_widthPercent="4%w" />

    <TextView
        android:id="@+id/id_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="#000000"
        app:layout_heightPercent="4%w"
        app:layout_marginLeftPercent="37%w"
        app:layout_textSizePercent="3.5%w"
        app:layout_widthPercent="20%w" />
</com.zhy.android.percent.support.PercentRelativeLayout>