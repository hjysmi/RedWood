<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <!-- <ImageView
         android:id="@+id/id_iv_back"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical|left"
         android:background="@drawable/prolist_back"
         app:layout_heightPercent="8%w"
         app:layout_widthPercent="8%w" />-->

    <EditText
        android:id="@+id/id_et_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/prodetail_top_bg"
        android:gravity="center_vertical"
        android:hint="搜索客户"
        android:imeActionLabel="搜索"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="#c9c9c9"
        app:layout_heightPercent="10%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_textSizePercent="4%w"
        app:layout_widthPercent="80%w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/proclassfrag_search"
        app:layout_heightPercent="6%w"
        app:layout_marginLeftPercent="7%w"
        app:layout_widthPercent="6%w" />

    <ImageView
        android:id="@+id/id_iv_addcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/customerfrag_add"
        app:layout_heightPercent="7%w"
        app:layout_marginRightPercent="4%w"
        app:layout_widthPercent="7%w" />
</com.zhy.android.percent.support.PercentFrameLayout>