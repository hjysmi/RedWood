<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <include
        layout="@layout/createcustomer_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13%w" />

    <include
        android:id="@+id/createcustomer_name"
        layout="@layout/createcustomer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="11%w"
        app:layout_marginTopPercent="20%w" />

    <include
        android:id="@+id/createcustomer_phone"
        layout="@layout/createcustomer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createcustomer_name"
        app:layout_heightPercent="11%w"
        app:layout_marginTopPercent="1.5%w" />

    <include
        android:id="@+id/createcustomer_province"
        layout="@layout/createcustomer_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createcustomer_phone"
        app:layout_heightPercent="11%w"
        app:layout_marginTopPercent="1.5%w" />

    <include
        android:id="@+id/createcustomer_city"
        layout="@layout/createcustomer_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createcustomer_province"
        app:layout_heightPercent="11%w"
        app:layout_marginTopPercent="1.5%w" />

    <com.onepiece.redwood.WhorlView
        android:id="@+id/id_whorlview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:WhorlView_BigWhorlColor="@color/material_red"
        app:WhorlView_CircleSpeed="360"
        app:WhorlView_MiddleWhorlColor="@color/material_red"
        app:WhorlView_Parallax="fast"
        app:WhorlView_SmallWhorlColor="@color/material_red" />
</com.zhy.android.percent.support.PercentRelativeLayout>