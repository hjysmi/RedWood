<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/id_tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="5%w"
        app:layout_marginLeftPercent="5%w"
        />

    <TextView
        android:id="@+id/id_tv_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1%w"
        app:layout_textSizePercent="2%w"
        app:layout_marginLeftPercent="5%w"/>

    <TextView
        android:id="@+id/id_tv_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1%w"
        app:layout_marginLeftPercent="5%w"/>

    <TextView
        android:id="@+id/id_tv_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_marginBottomPercent="5%w"/>

</com.zhy.android.percent.support.PercentLinearLayout>